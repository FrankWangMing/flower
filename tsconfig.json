{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "./dist",
    // 输出目录
    "target": "es2015",
    // 编译目标
    "module": "esnext",
    "moduleResolution": "node",

    "allowJs": true,

    // 是否编辑js文件
    "strict": false,

    // 严格模式
    "noUnusedLocals": false,
    // 未使用变量报错
    "experimentalDecorators": true,
    // 启动装饰器
    "resolveJsonModule": true,
    // 加载json
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    // 删除注释
    "strictPropertyInitialization": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "sourceMap": true,
    // 生成 sourceMap（用于调试）
    "declaration": true,
    // 生成定义文件
    "declarationMap": true,
    // 生成定义sourceMap
    "declarationDir": "./dist",
    // 导入库类型定义
    "types": ["gl-matrix-esm", "lodash"]
  },
  "include": [
    "src/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
    // 导入目录
  ],
  "exclude": ["node_modules", "dist", "lib", "docs"]
}
