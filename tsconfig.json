{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "./dist",
    // 输出目录
    "sourceMap": true,
    // 是否生成sourceMap
    "target": "es2015",
    // 编译目标
    "module": "esnext",
    "moduleResolution": "node",

    "allowJs": true,

    // 是否编辑js文件
    "strict": false,

    // 严格模式
    "noUnusedLocals": false,
    // 未使用变量报错
    "experimentalDecorators": true,
    // 启动装饰器
    "resolveJsonModule": true,
    // 加载json
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    // 删除注释
    "strictPropertyInitialization": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "inlineSourceMap": true,
    "declaration": true,
    // 生成定义文件
    "declarationMap": true,
    // 生成定义sourceMap
    "declarationDir": "./dist",
    // 导入库类型定义
    "types": [
      "gl-matrix",
      "lodash"
    ],
  },
  "include": [
    "src/*"
    // 导入目录
  ],
  "exclude": ["node_modules","dist"]
}



